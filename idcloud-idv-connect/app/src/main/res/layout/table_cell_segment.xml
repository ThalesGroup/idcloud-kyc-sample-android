<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="vertical"
    android:padding="@dimen/dimensionMarginSmall">

    <TextView
        android:id="@+id/table_cell_segment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@android:string/untitled"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/colorTextPrimary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView android:id="@+id/table_cell_segment_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextSecondary"
        android:text="@android:string/untitled"/>

    <Spinner
        android:id="@+id/table_cell_segment_spinner"
        android:layout_margin="@dimen/dimensionMarginSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>