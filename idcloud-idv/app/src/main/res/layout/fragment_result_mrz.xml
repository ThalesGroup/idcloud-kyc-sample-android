<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_gradient_primary"
    android:gravity="center|top"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fragment_res_mrz_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimensionMarginNormal"
        android:layout_gravity="center"
        android:gravity="start"
        android:textSize="@dimen/dimensionTextSizeHeader"
        android:textColor="@color/colorTextPrimary"
        android:text="@string/fragment_res_mrz_caption" />


    <TextView
        android:id="@+id/fragment_res_mrz_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimensionMarginNormal"
        android:textColor="@color/colorTextPrimary"
        android:text="@string/fragment_res_mrz_description" />

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/fragment_res_mrz_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/background_stroke_radius"
            android:padding="@dimen/dimensionMarginMinimal"
            android:layout_margin="@dimen/dimensionMarginSmall"
            >
            <TextView
                android:id="@+id/fragment_res_mrz_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimensionMarginNormal"
                android:textColor="@color/colorTextPrimary"
                android:text="Document number: A12345678\nDate of birth: 710101\nDate of expiry: 210101"
                />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/fragment_res_mrz_button_next"
        style="@style/AppTheme.Button"
        android:layout_marginBottom="@dimen/dimensionMarginBig"
        android:paddingBottom="0dp"
        android:text="@string/fragment_res_mrz_button_next"/>
</LinearLayout>