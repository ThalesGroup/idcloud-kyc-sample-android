<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|top"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/dimensionMarginBig"
        android:contentDescription="@android:string/untitled"
        app:srcCompat="@drawable/img_logo_idcloud" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimensionMarginSmall"
        android:layout_marginBottom="@dimen/dimensionMarginBig"
        android:textSize="@dimen/dimensionTextSizeHeaderSecondary"
        android:textColor="@color/idCloudRed"
        android:gravity="center"
        android:text="@string/app_name" />

</LinearLayout>
